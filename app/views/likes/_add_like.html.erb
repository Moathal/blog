<% if blogger_signed_in?%>
  <% if @post.likes.find_by(author_id: current_blogger.id).nil? %>
    <%= form_with model: @like, class: 'd-flex flex-row justify-content-end', url: blogger_post_likes_path(post_id: @post.id, blogger_id: @blogger.id, create: true) do |f| %>
      <%= f.submit "Like",  style: "margin: auto 1% 1% 1%; width: min-content", class:"btn btn-outline-success" %>
    <% end %>
    <% else %>
      <%= form_with model: @like, class: 'd-flex flex-row justify-content-end', url: blogger_post_likes_path(post_id: @post.id, blogger_id: @blogger.id) do |f| %>
        <%= f.submit "Remove like", style: "margin: auto 1% 1% 1%;", class:"btn btn-outline-danger" %>
      <% end %>
  <% end %>
<% end %>