      <% if @post.likes.find_by(author_id: current_user.id).nil? %>
        <%= form_with model: @like, url: user_post_likes_path(post_id: @post.id, user_id: @user.id, create: true) do |f| %>
          <%= f.submit "Like", class:"btn btn-outline-success" %>
        <% end %>
        <% else %>
          <%= form_with model: @like, url: user_post_likes_path(post_id: @post.id, user_id: @user.id) do |f| %>
            <%= f.submit "Remove like", class:"btn btn-outline-danger" %>
          <% end %>
      <% end %>