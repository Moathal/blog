<div class="m-4">
<img src='<%=@user.photo%>'>
<h2><b>name: </b?\><%=@user.name%></h2>
<p><b>bio: </b><%=@user.bio%></p>
<p>Number of Posts: <span><%=@user.post_counter%></span></p>
</div>
<div class="m-4">
<%@user.recent_three_posts.each do |post|%>
<a id="post-box<%=post.id%>" href="<%=@user.id%>/posts/<%=post.id%>"><h3><%= post.title%></h3></a>
<p><%=post.text%></p>
<%end%>
<a href="/users/<%=@user.id%>/posts">Show all posts</a>
</div>