<div class="m-4">
<h3><%=@post.title%> by <%=@user.name%><h3>
    <div class="m-4">
      <p class="ml-4">Number of Comments: <span class="text"><%= @post.comments_counter %></span></p>
    </div>
        <div class="m-4">
      <p class="ml-4">Number of Likes: <span class="text"><%= @post.likes_counter %></span></p>
    <p><%=@post.text%><p>
    </div>
    <div class="m-4">
    <h2>COMMENTS</h2>
    <%@comments.includes(:author).each do |comment|%>
        <p class="card-text"><%= comment.author.name %>: <%= comment.text %></p>
        <%end%>
        <%= link_to "Add New Comment", new_user_post_comment_path(user_id: @user.id, post_id: @post.id), class:"btn btn-primary" %>
    </div>
    <div class="m-4">
    <%= render 'likes/add_like'%>
    </div>
